@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@section Scripts
{
    <script src="js/login.js"></script>
}
@{
    string username = "";
    if(Model.error) {
        username = Model.user.username;
    }
}
@if(Model.success == 1) {
    <div class="alert alert-primary mb-5" role="alert">
        Registration successful! You can log in now.
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-4 col-sm-6">
        <h2>Login in</h2>
        <form id="server-form" method="post">
            <div class="form-group mt-3">
                <label asp-for="user.username"></label>
                <input asp-for="user.username" class="form-control input-dark" value="@username" minlength=5 maxlength=32>
            </div>
            <input type="hidden" asp-for="user.passwordHash" class="password-hash">
        </form>
        <form id="client-form" class="mt-3">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control input-dark" minlength=6 maxlength=32>
                <small class="form-text text-muted">Your password is hashed before sending!</small>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Login</button>
        </form>
        @if(Model.error) {
        <div class="text-danger mt-3">Incorrect username or password! Try again.</div>
        }
    </div>
</div>

