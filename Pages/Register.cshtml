@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Scripts
{
    <script src="js/register.js"></script>
}

<div class="row justify-content-center">
    <div class="col-lg-4 col-sm-6">
        <h2>Create a new account</h2>
        <form id="server-form" method="post">
            <div class="form-group mt-3">
                <label asp-for="user.username"></label>
                <input asp-for="user.username" class="form-control input-dark username" minlength=5 maxlength=32>
                <small class="form-text text-muted">Create a unique username.</small>
            </div>
            <input type="hidden" asp-for="user.passwordHash" class="password-hash">
            <input type="hidden" asp-for="user.publicKey" class="publicKey">
            <input type="hidden" asp-for="user.privateKeyEncrypted" class="encryptedPrivateKey">
        </form>
        <form id="client-form" class="mt-3">
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" class="form-control input-dark" minlength=6 maxlength=32>
                <small class="form-text text-muted">Use a strong password for encryption!</small>
            </div>
            <div class="form-group mt-3">
                <label for="password2">Repeat password</label>
                <input type="password" id="password2" class="form-control input-dark" minlength=6 maxlength=32>
                <small class="form-text text-muted">Your password is hashed before sending!</small>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Register</button>
        </form>
        <div class="text-danger mt-3 error-msg"></div>
        @if(Model.error) {
        <div class="text-danger mt-3">Username is already taken. Try again.</div>
        }
    </div>
</div>