<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EncryptedMail</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt.styles.css" asp-append-version="true" />
    <!--<a href="https://www.flaticon.com/free-icons/mail" title="mail icons">Mail icons created by Those Icons - Flaticon</a>-->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-black">
            <div class="container-fluid text-white">
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" href="/Index">EncryptedMail</a>
                <div class="navbar-collapse collapse" id="collapseNavbar">
                    <ul class="navbar-nav">
                        @if(Model.HttpContext.User.Identity.IsAuthenticated) {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/App/Mailbox">Mailbox</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/App/New">New mesage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/App/Contacts">Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/App/Sent">Sent</a>
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if(Model.HttpContext.User.Identity.IsAuthenticated) {
                        <li class="nav-item">
                            <a class="nav-link text-light" disabled>@Model.HttpContext.User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Logout">Logout</a>
                        </li>
                        } else {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Register">Register</a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-dark mt-sm-5 text-white rounded p-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/hybrid-crypto.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js" integrity="sha512-E8QSvWZ0eCLGk4km3hxSsNmGWbLtSCSUcewDQPQWZF6pEU8GlT8a5fF32wOl1i8ftdMhssTrF/OhyGWwonTcXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/forge/1.3.1/forge.min.js" integrity="sha512-95iy0RZIbw3H/FgfAj2wnCQJlzFQ+eaSfUeV/l8WVyGHKSRMzm3M/O+85j9ba/HFphkijrCTDjcuDX0BL2lthA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>